<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.happyhouse.model.mapper.MemberMapper">

	<select id="login" parameterType="map" resultType="boolean">
		select *
		from members
		where userId = #{userId} and userPwd = #{userPwd}
	</select>
	
	
	 <!-- <select id="userList" resultType="memberDto">
		select userid, userpwd, username, email, address, date_format(joindate, '%y.%m.%d') joindate
		from ssafy_member
		order by joindate desc;
	</select>  -->
	
	<select id="lookupmember" parameterType="String" resultType="memberDto">
		select *
		from members
		where userId = #{userId}
	</select>
	
	<!--  <insert id="userRegister" parameterType="MemberDto">
		insert into ssafy_member (userid, userpwd, username, email, address, joindate)
		values (#{userid}, #{userpwd}, #{username}, #{email}, #{address}, now())
	</insert>
	 -->
	<update id="update" parameterType="memberDto">
		update members
		set userPwd = #{userPwd}, userName = #{userName}, userAddress = #{userAddress}, userPhone = #{userPhone}
		where userId = #{userId}
	</update>
	
	 <delete id="deleteMember" parameterType="String">
		delete from members
		where userId = #{userId}
	</delete>  
	
</mapper>